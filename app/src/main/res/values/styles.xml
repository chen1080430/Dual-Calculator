<resources>

    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:backgroundTint">@color/calculator_button_background_number</item>
        <item name="android:textColor">@color/calculator_button_text_color</item>
        <item name="android:autoSizeMaxTextSize">18sp</item>
        <item name="android:autoSizeMinTextSize">6sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="layout_constraintHeight">match_constraint</item>
    </style>

    <style name="CalculatorDisplay">
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:textColor">@color/calculator_display_text_color</item>
        <item name="android:backgroundTint">@color/calculator_display_background_color</item>
    </style>

    <style name="CalculatorButton_Function" parent="CalculatorButton">
        <item name="android:backgroundTint">@android:color/darker_gray</item>
    </style>

    <style name="CalculatorButton_Function2" parent="CalculatorButton">
        <item name="android:backgroundTint">?colorPrimary</item>
    </style>

    <style name="CalculatorButton_Switch" parent="CalculatorButton">
        <item name="android:backgroundTint">@android:color/holo_green_dark</item>
    </style>
</resources>